<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"

        android:textSize="65dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/button_layout"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_solution_tv"
        android:text="0"
        android:textSize="45dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/result_tv"
        android:layout_margin="15dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d0f7f0"
        android:paddingVertical="8dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="73dp"
            android:layout_height="73dp"
          android:layout_margin="8dp"
            android:text="C"
            android:textColor="#f6f7f2"
            android:backgroundTint="#fc5832"
            android:textSize="35sp"
            app:cornerRadius="36dp"
            android:id="@+id/closeButton"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="("
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_open_bracket"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text=")"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_close_bracket"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="/"
                android:textColor="#f6f7f2"
                android:backgroundTint="#f5c16e"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_divide"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="7"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_7"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="8"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_08"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="9"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_09"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="*"
                android:textColor="#f6f7f2"
                android:backgroundTint="#f5c16e"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_multiply"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="4"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_4"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="5"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_5"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="6"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_6"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="+"
                android:textColor="#f6f7f2"
                android:backgroundTint="#f5c16e"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_addition"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="1"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_1"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="2"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_2"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="3"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_3"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="-"
                android:textColor="#f6f7f2"
                android:backgroundTint="#f5c16e"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_minus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="12dp"
                android:text="AC"
                android:backgroundTint="#e00404"
                android:textColor="#f6f7f2"
                android:textSize="22dp"
                app:cornerRadius="36dp"
                android:id="@+id/button_ac"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="0"
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_0"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="."
                android:textColor="#f6f7f2"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_dot"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:text="="
                android:textColor="#f6f7f2"
                android:backgroundTint="#f5c16e"
                android:textSize="35sp"
                app:cornerRadius="36dp"
                android:id="@+id/button_equals"/>
        </LinearLayout>







    </LinearLayout>















</RelativeLayout>
